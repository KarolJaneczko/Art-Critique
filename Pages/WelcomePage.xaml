<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Art_Critique.WelcomePage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <Grid RowDefinitions="*, Auto">
        <!-- Background image -->
        <Image Source="welcomepage_background.png" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Aspect="AspectFill"/>
        
        <!-- Greetings -->
        <StackLayout x:Name="WelcomeLayout" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
            <Label x:Name="WelcomeLabel" Text="Welcome!" TextColor="White" FontSize="50" FontFamily="PragmaticaMedium" FontAttributes="Bold"/>
        </StackLayout>
    </Grid>

</ContentPage>
