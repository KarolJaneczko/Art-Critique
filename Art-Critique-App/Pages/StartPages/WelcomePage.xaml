<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Art_Critique.WelcomePage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <Grid RowDefinitions="*, Auto">
        <!-- Background image -->
        <Image Source="welcomepage_background.png" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Aspect="AspectFill"/>

        <!-- App logo -->
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
            <Image Source="artcritique_logo.png"/>
        </StackLayout>

        <!-- Buttons -->
        <StackLayout Orientation="Vertical" Spacing="20" VerticalOptions="End" Margin="0, 0, 0, 20">
            <Button Style="{StaticResource LargePrimaryButton}" Text="Login" Clicked="GoToLogin"/>
            <Button Style="{StaticResource LargeSecondaryButton}" Text="Register" Clicked="GoToRegister"/>
        </StackLayout>
    </Grid>
</ContentPage>