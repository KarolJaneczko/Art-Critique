<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Art_Critique.MainPage">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto" Padding="20,0">
            <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto,Auto,Auto" HorizontalOptions="Center" Margin="0,10,0,10">
                <Image Grid.Column="1" Source="facebook_icon.png" WidthRequest="30" HeightRequest="30" Aspect="AspectFill" />
                <Label Grid.Column="2" Text="{Binding Login}" CharacterSpacing="1" FontAttributes="Bold" VerticalTextAlignment="Center" Margin="10,0,0,0" />
                <Label Grid.Column="3" Text="{Binding Rating, StringFormat='Rating: {0}/5'}" CharacterSpacing="1" FontAttributes="Bold" VerticalTextAlignment="Center" Padding="25,0,0,0"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>