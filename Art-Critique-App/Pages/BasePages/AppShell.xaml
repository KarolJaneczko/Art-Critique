<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Art_Critique.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Art_Critique"
       Shell.FlyoutBehavior="Flyout">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    <ShellContent Title="Profile" ContentTemplate="{DataTemplate local:ProfilePage}" Route="ProfilePage" />
    <ShellContent Title="Search" ContentTemplate="{DataTemplate local:SearchPage}" Route="SearchPage" />
    <ShellContent Title="Add new artwork" ContentTemplate="{DataTemplate local:AddArtworkPage}" Route="AddArtworkPage" />
    <ShellContent Title="Browsing history" ContentTemplate="{DataTemplate local:HistoryPage}" Route="HistoryPage" />
    <MenuItem Text="Logout" Clicked="ClickedLogout"/>
</Shell>
