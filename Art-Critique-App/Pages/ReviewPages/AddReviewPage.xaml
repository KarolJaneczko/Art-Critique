<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Art_Critique.AddReviewPage"
             Title="Add your review">

    <StackLayout>
        <Frame BackgroundColor="#e5c064" Margin="10" Padding="10" CornerRadius="20" >
            <Label Text="Title:" HorizontalTextAlignment="Center" FontSize="25" CharacterSpacing="1" FontFamily="PragmaticaMedium" FontAttributes="Bold" />
        </Frame>
        <Frame Style="{StaticResource EntryFrame}">
            <Entry Style="{StaticResource EntryInput}" Text="{Binding Title}" Placeholder="Enter title" />
        </Frame>
        <Frame BackgroundColor="#e5c064" Margin="10" Padding="10" CornerRadius="20" >
            <Label Text="Your review:" HorizontalTextAlignment="Center" FontSize="25" CharacterSpacing="1" FontFamily="PragmaticaMedium" FontAttributes="Bold" />
        </Frame>
        <Frame Style="{StaticResource EntryFrame}">
            <Editor Style="{StaticResource EntryEditor}" Text="{Binding Content}" Placeholder="Write your review here..." />
        </Frame>
        <Button Style="{StaticResource LargePrimaryButton}" Text="Confirm" Command="{Binding AddReviewCommand}" Margin="20"/>
    </StackLayout>
</ContentPage>