    <Grid RowDefinitions="*, Auto" Padding="20,0">
        <!-- Loading indicator -->
        <StackLayout Style="{StaticResource LoadingLayout}" IsVisible="{Binding IsLoading}">
            <ActivityIndicator Style="{StaticResource LoadingIndicator}" IsVisible="{Binding IsLoading}" IsRunning="{Binding IsLoading}" />
        </StackLayout>

        <!-- Reviews data -->
        <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Always" IsVisible="{Binding IsLoading, Converter={StaticResource InvertBool}}">
            <StackLayout>
                <Label Text="Your review:" IsVisible="{Binding IsYourReviewVisible}" Margin="0, 20, 0, 0" HorizontalTextAlignment="Center"
                       FontSize="25" CharacterSpacing="1" FontFamily="PragmaticaMedium" FontAttributes="Bold" />
